{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "dprint.dprint",
  "deno.enable": true,
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "json.schemas": [
    {
      "fileMatch": [
        "dprint.json"
      ],
      "url": "https://docs.renovatebot.com/renovate-schema.json"
    }
  ],
  "cSpell.words": [
    "antongolub",
    "deno",
    "denoland",
    "stdbuf",
    "unbuffer"
  ]
}
